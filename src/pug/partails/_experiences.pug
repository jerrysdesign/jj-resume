mixin experience-item-first(company, title, date, year, content)
  .col-md-6.col-xs-6.mobile-view
    .timeline-divider.wow.bounceIn
      i.fa.fa-check
    .timeline-marker.wow.slideInLeft
      .timeline-date #{date}
      .years #{year}
      .arrow-right
  .col-md-6.col-xs-6.mobile-view
    .timeline-details.wow.slideInRight
      .associations
        h2.associations-heading #{company}
        h3.associations-subheading #{title}
        p #{content}
mixin experience-item-left(company, title, date, year, content)
  .col-md-6.col-xs-6.mobile-view
    .timeline-divider.wow.bounceIn
      i.fa.fa-times
    .timeline-marker.wow.slideInLeft
      .timeline-date #{date}
      .years #{year}
      .arrow-right
  .col-md-6.col-xs-6.mobile-view
    .timeline-details.wow.slideInRight
      .associations
        h2.associations-heading #{company}
        h3.associations-subheading #{title}
        p #{content}
mixin experience-item-right(company, title, date, year, content)
  .col-md-6.col-xs-6.mobile-view
    .timeline-divider.wow.bounceIn
      i.fa.fa-times
    .timeline-details.wow.slideInLeft
      .associations
        h2.associations-heading #{company}
        h3.associations-subheading #{title}
        p #{content}
  .col-md-6.col-xs-6.mobile-view
    .timeline-marker.wow.slideInRight
      .timeline-date #{date}
      .years #{year}
      .arrow-left

